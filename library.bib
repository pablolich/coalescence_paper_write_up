title = {{A multi-taxa functional diversity assessment of the effects of eco-estate development in the mixed land-use mosaic of the KwaZulu-Natal North Coast, South Africa}},
url = {http://www.sciencedirect.com/science/article/pii/S0169204619302130},
volume = {192},
year = {2019}
}
